{
    "name": "Linkedin Clean",
    "description": "A plugin to keep Linkedin Clean!",
    "version": "0.4",
    "permissions": [
        "tabs",
        "storage"
    ],
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.linkedin.com/*"
            ],
            "js": [
                "content/content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "/images/linkedclean16.png",
            "32": "/images/linkedclean32.png",
            "48": "/images/linkedclean48.png",
            "128": "/images/linkedclean128.png"
        }
    }
}